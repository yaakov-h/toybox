<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yaakov's Toybox</title>
    <link rel="apple-touch-icon" sizes="180x180" href="https://yaakov.online/assets/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="https://yaakov.online/assets/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="https://yaakov.online/assets/icons/favicon-16x16.png">
    <link rel="mask-icon" href="https://yaakov.online/assets/icons/safari-pinned-tab.svg" color="#602350">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/toybox.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://yaakov.online/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div>
                <a href="/"><img class="logo" src="https://yaakov.online/assets/icons/icon.png" alt="Logo" /></a>
            </div>
            <div class="spacer">&nbsp;</div>
            <ul class="nav">
                <li><a href="https://yaakov.online/">Home</a></li>
                <li class="active"><a href="/">Toybox</a></li>
            </ul>
        </nav>
    </header>

    <div class="content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.UtcNow.Year
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>